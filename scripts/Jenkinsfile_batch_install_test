#!groovy

node {
  def branch = "main"
  def test_dir = "${env.TEST_DIRECTORY_LIST}".split(',')

  if ("${env.BRANCH}" != "null" && "${env.BRANCH}" != "") {
    branch = "${env.BRANCH}"
  }

  def repo = scm.userRemoteConfigs
  if ("${env.REPO}" != "null" && "${env.REPO}" != "") {
    repo = [
      [url: "${env.REPO}"]
    ]
  }
  def timeout = "60m"
  if ("${env.TIMEOUT}" != "null" && "${env.TIMEOUT}" != "") {
    timeout = "${env.TIMEOUT}"
  }
  wrap([$class: 'AnsiColorBuildWrapper', 'colorMapName': 'XTerm', 'defaultFg': 2, 'defaultBg': 1]) {
    withFolderProperties {
      paramsMap = []
      params.each {
        if (it.value && it.value.trim() != "") {
          paramsMap << "$it.key=$it.value"
        }
      }
      withEnv(paramsMap) {
        stage('Checkout') {
          deleteDir()
          checkout([
            $class: 'GitSCM',
            branches: [
              [name: "*/${branch}"]
            ],
            extensions: scm.extensions + [
              [$class: 'CleanCheckout']
            ],
            userRemoteConfigs: repo
          ])
        }
        dir("./") {
          stage('Run Parallel Jobs') {
            echo "Running ${test_dir.size()} tests: ${test_dir}"
            def jobs = [:]

            test_dir.each { test_name ->
              def actual_testdir_name = test_name
              def job_aws_ssh_key_name = "${AWS_SSH_KEY_NAME}"
              def job_aws_ssh_pem_key = "${AWS_SSH_PEM_KEY}"

              if (test_name == "docker_cri" || test_name.contains("validatecluster")) {
                actual_testdir_name = "validatecluster"
              }

              if (test_name.contains("restartservice")) {
                actual_testdir_name = "restartservice"
              }

              if (test_name.contains("mixedoscluster")) {
                actual_testdir_name = "mixedosclsuter"
              }

              def install_params = [
                string(name: 'TEST_ARGS', value: "${TEST_ARGS}"),
                string(name: 'REPO', value: "${REPO}"), 
                string(name: 'BRANCH', value: "${BRANCH}"),                                         
                string(name: 'PRODUCT_NAME', value: "${PRODUCT_NAME}"),                    
                string(name: 'INSTALL_VERSION', value: "${INSTALL_VERSION}"),
                string(name: 'INSTALL_MODE', value: "${INSTALL_MODE}"),
                string(name: 'INSTALL_CHANNEL', value: "${INSTALL_CHANNEL}"),              
                string(name: 'HOSTNAME_PREFIX', value: "${HOSTNAME_PREFIX}"), 
                string(name: 'TEST_DIRECTORY', value: actual_testdir_name),
                string(name: 'AWS_SSH_KEY_NAME', value: job_aws_ssh_key_name),
                string(name: 'AWS_SSH_PEM_KEY', value: job_aws_ssh_pem_key),
                string(name: 'REPORT_TO_QASE', value: "${REPORT_TO_QASE}"),
                string(name: 'QASE_PROJECT_ID', value: "${QASE_PROJECT_ID}"),
                string(name: 'QASE_RUN_ID', value: "${QASE_RUN_ID}"),
              ]
              
              def product_name = "${env.PRODUCT_NAME}"

              def staticTests = [
                'docker_cri': 'k3s_docker_cri',
                'dualstack': "${env.PRODUCT_NAME}_dual_stack",
                'ipv6only': "${env.PRODUCT_NAME}_ipv6_only",
                'clusterrestore': "${env.PRODUCT_NAME}_cluster_restore",
                'validatecluster': "${env.PRODUCT_NAME}_validate_cluster",
                'validatecluster_arm': "${env.PRODUCT_NAME}_validate_cluster_arm",
                'validatecluster_rpm': "rke2_validate_cluster_rpm",
                'validatecluster_arm_rpm': "rke2_validate_cluster_arm_rpm",
                'mixedoscluster_rpm': "rke2_windows_agent_rpm",
                'mixedoscluster_flannel_rpm': "rke2_windows_agent_flannel_rpm"
              ]

              def suffix = (product_name == 'rke2') ? '_rpm' : ''
              def dynamicTests = [
                'killalluninstall': "${env.PRODUCT_NAME}_kill_all_uninstall",
                'killalluninstall_arm': "${env.PRODUCT_NAME}_kill_all_uninstall_arm",
                'restartservice': "${env.PRODUCT_NAME}_restart_service",
                'restartservice_splitroles': "${env.PRODUCT_NAME}_restart_service_splitroles",
                'rebootinstances': "${env.PRODUCT_NAME}_reboot_instances",
                'certrotate': "${env.PRODUCT_NAME}_cert_rotate",
                'secretsencrypt': "${env.PRODUCT_NAME}_secrets_encryption",
                'clusterreset': "${env.PRODUCT_NAME}_cluster_reset",
              ]

              def jobName = staticTests[test_name] ?: dynamicTests[test_name]

              if (jobName) {
                jobs[test_name] = { build job: jobName, parameters: install_params }
              }
            } // for each test_dir loop

            parallel jobs
          } // stage run parallel jobs
        } // dir
      } // withEnv
    } // withFolderProperties
  } // wrap
} // node
